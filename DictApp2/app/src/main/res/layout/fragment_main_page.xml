<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/mainProgressContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ProgressBar android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/scanning"
            android:paddingTop="4dip"
            android:singleLine="true" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/search_bar_normal"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:id="@+id/linearLayout"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/search_bar_icon_normal"
                android:layout_gravity="center"
                android:paddingRight="5dip"
                android:layout_marginLeft="5dip"/>
            <EditText
                android:id="@+id/SearchEditText"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:imeOptions="actionSearch|flagNoExtractUi|flagNoFullscreen"
                android:hint="@string/search_hint"
                android:singleLine="true"
                android:background="@null"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/clear_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|left"
                android:background="@drawable/acclist_delete_normal"
                android:visibility="invisible"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout">

            <WebView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="fill_vertical"
                android:id="@+id/MeaningWebView"/>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>
